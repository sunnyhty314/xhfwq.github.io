    <script>
        function simulateServerResponse() {
            const userInput = document.getElementById('userInput').value;
            const responseDiv = document.getElementById('response');
            responseDiv.innerHTML = "思考中...";
            setTimeout(() => {
                responseDiv.innerHTML = "服务器繁忙，请稍后再试";
            }, 3000); // 模拟3秒的延迟
        }
